# JWT Secret Key for backend authentication
# Generate a strong random string for production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Google Books API Key
# Get this from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456789012345

# API URL for frontend
# Development: http://localhost:3001/api
# Production: https://your-domain.com/api
NEXT_PUBLIC_API_URL=https://localhost/api

# Loading Configuration
# Enable minimum loading duration for better UX (mainly for development)
NEXT_PUBLIC_ENABLE_MINIMUM_LOADING=true
# Minimum loading duration in milliseconds
NEXT_PUBLIC_MINIMUM_LOADING_DURATION=1000